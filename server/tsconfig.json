{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@/*": ["server/*"],
      "@shared/*": ["shared/*"]
    },
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": ["**/*.ts", "../shared/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "../vite.config.ts",
    "../client/**/*",
    "vite.ts",
    "**/vite*.ts"
  ]
} 