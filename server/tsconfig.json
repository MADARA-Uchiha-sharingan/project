{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@/*": ["server/*"],
      "@shared/*": ["shared/*"]
    },
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["../**/*.ts"],
  "exclude": ["node_modules", "dist"]
} 