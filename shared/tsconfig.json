{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../server/dist/shared",
    "rootDir": ".",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "composite": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
} 